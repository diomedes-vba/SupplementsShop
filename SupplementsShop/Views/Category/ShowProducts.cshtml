@model ProductsListModel

<h2>title</h2>
<div>
    <h5>
        @((Model.CurrentPage - 1) * Model.PageSize + 1)-@(Model.PageSize * Model.CurrentPage) out of @Model.TotalProducts results
    </h5>
</div>
<div>
    <h5>Sort by</h5>
</div>
<div class="container">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <a href="@Url.Action("Details", "Product", new { slug = product.Slug })" class="btn btn-primary">View Product</a>
                        <button class="add-to-cart-btn" data-product-id="@product.Id">Add to Cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Products page navigation">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#"><</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">...</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">@Model.TotalPages</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">></a>
        </li>
    </ul>
</nav>