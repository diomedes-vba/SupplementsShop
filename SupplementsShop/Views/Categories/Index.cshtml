@model List<Category>;

<div>
    <h3>Categories</h3>
</div>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td><a class="btn btn-link" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
    <form asp-controller="Categories" asp-action="Create">
        <input type="submit" value="Add" />
    </form>
}

