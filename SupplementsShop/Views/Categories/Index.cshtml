@model List<Category>;

<div>
    <h3>Categories</h3>
</div>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Link</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td><a class="btn btn-link" asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a></td>
            </tr>
        }
        </tbody>
    </table>
}

