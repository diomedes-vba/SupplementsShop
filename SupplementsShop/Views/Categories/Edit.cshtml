@model Category

@if (Model != null)
{
    <h3>Category: @Model.CategoryName</h3>
}

<form method="post" asp-controller="Categories" asp-action="Edit">
    <input type="hidden" asp-for="CategoryId" />
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="CategoryName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CategoryName" class="form-control"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="CategoryDescription" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CategoryDescription" class="form-control"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
        <div class="col-6">

        </div>
    </div>
</form>