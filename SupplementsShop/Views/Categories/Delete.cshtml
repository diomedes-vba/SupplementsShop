@model Category

@if (Model != null)
{
    <h3 class="text-center">Are you sure you want to delete @Model.Name?</h3>
    
    <form method="post" asp-controller="Categories" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" class="btn btn-danger" value="Delete" />
    </form>
    <form asp-controller="Categories" asp-action="Index">
        <input type="submit" value="Cancel" />
    </form>
}