@model IList<HomeCategoryViewModel>

<div class="container py-5">
    <h2 class="mb-4">Browse available categories</h2>
    <ul class="list-group">
        @foreach (var categoryModel in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a asp-controller="Category" asp-action="CategoryPage" asp-route-slug="@categoryModel.Slug">
                    @categoryModel.Name
                </a>
                <span class="badge bg-primary rounded-pill">@categoryModel.ProductCount</span>
            </li>
        }
    </ul>
</div>
